    </div>
</head>

<body>
    <!-- ======= Works Section ======= -->
    <section class="section site-portfolio">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover">
                        <form action="/review" method="post" enctype="multipart/form-data">
                            <thead>
                                <tr>
                                    <td>상품번호</td>
                                    <td>
                                        <select name="product_id" class="form-control">
                                            <% for (let i=0; i<product.length; i++) { %>
                                                <option value="<%= product[i].product_id %>"><%= product[i].product_item_name %></option>
                                            <% } %>
                                        </select>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>사진 업로드</td>
                                    <td><input type="file" id="review_image" name="review_image"></td>
                                </tr>
                                <tr>
                                    <td>내용</td>
                                    <td><textarea id="content" name="content"></textarea></td>
                                </tr>
                                <tr>
                                    <td>평점</td>
                                    <td><input type="number" min="1" max="5" id="rating" name="rating" value="1"></textarea></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><input type="submit" class="btn btn-primary" value="리뷰 작성"></td>
                                </tr>
                            </tbody>
                        </form>
                    </table>
                </div>
            </div>
        </div>
    </section><!-- End  Works Section -->


    <!-- Vendor JS Files -->
    <script src="../assets/vendor/aos/aos.js"></script>
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="../assets/vendor/php-email-form/validate.js"></script>
    <script src="../assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="../assets/js/main.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <!-- Footer -->
    <footer class="footer" role="contentinfo">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <p class="mb-1">&copy; Copyright MyPortfolio. All Rights Reserved</p>
                    <div class="credits">
                        Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>