<body>
    <!-- ======= Works Section ======= -->
    <section class="section site-portfolio">
        <div class="container">
            <div class="row">
                <div><button class="btn btn-primary" onclick="location.href='/review/newpost'">새 리뷰 작성</button></div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>글 번호</td>
                                <td>작성자</td>
                                <td>상품명</td>
                                <td>평점</td>
                                <td>작성 시간</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i<review.length; i++) { %>
                                <tr onclick="location.href='#'" style="cursor: pointer;">
                                    <td><%= review[i].review_id %></td>
                                    <td><%= review[i].customer_name %></td>
                                    <td><%= review[i].product_item_name %></td>
                                    <td><%= review[i].product_score %></td>
                                    <td><%= review[i].review_time %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section><!-- End  Works Section -->


    <!-- Vendor JS Files -->
    <script src="assets/vendor/aos/aos.js"></script>
