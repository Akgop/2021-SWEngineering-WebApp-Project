<body>
    <section class="section site-portfolio">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>판매 물품 조회/수정/삭제</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>상품번호</td>
                                <td>상품명</td>
                                <td>가격</td>
                                <td>평점</td>
                                <td>승인 여부</td>
                                <td>카테고리명</td>
                                <td>수정</td>
                                <td>삭제</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i<product.length; i++) { %>
                                <form method="post">
                                    <tr>
                                        <input type="hidden" id="product_id" name="product_id" value="<%= product[i].product_id %>">
                                        <td><%= product[i].product_id %></td>
                                        <td><input type="text" id="product_item_name" name="product_item_name" value="<%= product[i].product_item_name %>"></td>
                                        <td><input type="text" id="product_price" name="product_price" value="<%= product[i].product_price %>"></td>
                                        <td><%= product[i].product_avg_score %></td>
                                        <td><%= product[i].product_flag %></td>
                                        <td><input type="text" id="category_name" name="category_name" value="<%= product[i].category_name %>"></td>
                                        <td><button class="btn btn-primary" formaction="/product/update" type="submit">수정</button></td>
                                        <td><button class="btn btn-primary" formaction="/product/delete" type="submit">삭제</button></td>
                                    </tr>
                                </form> 
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
