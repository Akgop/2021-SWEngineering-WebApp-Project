<body>
    <section class="section site-portfolio">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>판매 물품 등록하기</h2>  
                    <form action="/product" method="post" enctype="multipart/form-data">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <td>상품명</td>
                                    <td><input type="text" name="product_item_name" id="product_item_name" required/></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>가격</td>
                                    <td><input type="number" name="product_price" id="product_price" required/></td>
                                </tr>
                                <tr>
                                    <td>수량</td>
                                    <td><input type="number" name="quantity" id="quantity" required/></td>
                                </tr>
                                <tr>
                                    <td>카테고리</td>
                                    <td><input type="text" name="category" id="category" required/></td>
                                </tr>
                                <tr>
                                    <td>이미지</td>
                                    <td><input type="file" id="image" name="image" required/></td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <button class="btn btn-primary" type="submit">등록</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Vendor JS Files -->
